@{
    ViewData["Title"] = "Home Page";
}

<div class="flex space-x-4 p-3">
    <!-- Card 1 -->
    <div class="bg-white rounded-lg shadow-md p-3 md:p-4 w-1/3">
        <h2 class="text-lg md:text-xl font-semibold text-gray-800">Total Users</h2>
        <div class="text-2xl md:text-3xl font-bold text-blue-600">5,234</div>
        <div class="mt-3">
            <label for="year1" class="block text-gray-600">Select Year:</label>
            <select id="year1" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                <option value="2022">2022</option>
                <option value="2021">2021</option>
                <option value="2020">2020</option>
            </select>
        </div>
    </div>

    <!-- Card 2 -->
    <div class="bg-white rounded-lg shadow-md p-3 md:p-4 w-1/3">
        <h2 class="text-lg md:text-xl font-semibold text-gray-800">Total Orders</h2>
        <div class="text-2xl md:text-3xl font-bold text-green-600">2,765</div>
        <div class="mt-3">
            <label for="year2" class="block text-gray-600">Select Year:</label>
            <select id="year2" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-300 focus:ring focus:ring-green-200 focus:ring-opacity-50">
                <option value="2022">2022</option>
                <option value="2021">2021</option>
                <option value="2020">2020</option>
            </select>
        </div>
    </div>

    <!-- Card 3 -->
    <div class="bg-white rounded-lg shadow-md p-3 md:p-4 w-1/3">
        <h2 class="text-lg md:text-xl font-semibold text-gray-800">Total Revenue</h2>
        <div class="text-2xl md:text-3xl font-bold text-red-600">$12,345</div>
        <div class="mt-3">
            <label for="year3" class="block text-gray-600">Select Year:</label>
            <select id="year3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-300 focus:ring focus:ring-red-200 focus:ring-opacity-50">
                <option value="2022">2022</option>
                <option value="2021">2021</option>
                <option value="2020">2020</option>
            </select>
        </div>
    </div>
</div>

